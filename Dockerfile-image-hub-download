
    4  mkdir docker-image
    5  cd docker-image/
-------------------------
# Use a specific version tag for stability
FROM ubuntu:24.04

# Use LABEL instead of MAINTAINER
LABEL maintainer="vishalrwagh1999@gmail.com"

# Install nginx, clean up cache to reduce size, and handle non-interactive prompts
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends nginx && \
    rm -rf /var/lib/apt/lists/*

# Document the port
EXPOSE 80

# Start nginx in the foreground (otherwise the container will exit immediately)
CMD ["nginx", "-g", "daemon off;"]
